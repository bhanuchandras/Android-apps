<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.bible_notes"
    android:versionCode="1"
    android:versionName="1.0" android:installLocation="auto">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_bible" 
            android:configChanges="orientation|screenSize" >
            <intent-filter>
            	<action android:name="android.intent.action.MAIN" />
            	<category android:name="android.intent.category.LAUNCHER" />
        	</intent-filter>
        </activity>
        <activity
            android:name=".FragChap"
            android:label="Chapters"
            android:configChanges="orientation|screenSize"
            >       
        </activity>
        <activity
            android:name=".FragText"
            android:label="Details"
            android:configChanges="orientation|screenSize"
             >       
        </activity>
         <activity
            android:name=".NotesList"
            android:label="Notes"
            android:configChanges="orientation|screenSize"
             >       
        </activity>
         <activity
            android:name=".NewNote"
            android:label="Notes"
            android:configChanges="orientation|screenSize"
             >       
        </activity>
         <activity android:name="ViewNote"
                   android:label="Notes"
            	   android:configChanges="orientation|screenSize"
             ></activity>
         <activity
             android:name="MyPrefs"
             android:label="Preference"
             android:configChanges="orientation|screenSize"
             >
             
         </activity>
    </application>
    
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>